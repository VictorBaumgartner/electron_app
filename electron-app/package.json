{
  "name": "ElectronCrawler",
  "version": "1.0.0",
  "description": "A cross-platform web crawler application.",
  "author": "Victor Bongard victorbongard@hotmail.com",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.electroncrawler",
    "productName": "ElectronCrawler",
    "mac": {
      "target": "dmg"
    },
    "extraResources": [
      {
        "from": "./python-portable/",
        "to": "python-portable",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./script.py",
        "to": "script.py"
      }
    ]
  }
}